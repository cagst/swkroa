<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{40} - %msg%n</pattern>
    </encoder>
  </appender>

  <!--Daily rolling file appender -->
  <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${catalina.base}/logs/swkroa.%d{yyyy-MM-dd}.log</fileNamePattern>

      <!-- Keep 30 days worth of history -->
      <maxHistory>30</maxHistory>
    </rollingPolicy>

    <encoder>
      <pattern>%date{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{40} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="com.cagst.swkroa" level="debug"/>
  <!--
    <logger name="com.fasterxml.jackson.databind" level="debug" />
    <logger name="org.springframework.http.converter.json" level="debug" />
    <logger name="org.springframework.web.servlet" level="debug" />
  -->

  <root>
    <level value="warn"/>
    <appender-ref ref="STDOUT"/>
    <!--
    <appender-ref ref="ROLLING" />
    -->
  </root>
</configuration>